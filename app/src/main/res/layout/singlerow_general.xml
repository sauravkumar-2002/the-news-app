<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="23dp"
    android:elevation="34dp"
   app:cardBackgroundColor="#E9FDF6F6"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:id="@+id/cvgeneral">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="119dp"
            android:layout_height="129dp"
            android:src="@drawable/ic_baseline_menu_24" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#B4FDF6F6"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="17dp"
                android:layout_marginLeft="9dp"
                android:id="@+id/titlegeneral"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:background="#E9FDF6F6"
                android:layout_gravity="bottom">
            <TextView
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:text="author"
                android:textSize="12dp"
                android:layout_marginLeft="9dp"
                android:id="@+id/authorgeneral"
                style="bold"/>
                <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="time"
            android:textSize="12dp"
           android:gravity="right"
                    android:layout_marginRight="12dp"
            android:id="@+id/timepgeneral"
            style="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>